<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Custom button colors -->
        <item name="buttonStyle">@style/MyButton</item>
    </style>

    <!-- Define the custom button style -->
    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/custom_button_color</item>
        <item name="android:textColor">@color/white</item> <!-- Certifique-se de usar o namespace android: -->
    </style>
</resources>
